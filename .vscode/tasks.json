{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar e Executar C++",
            "type": "shell",
            "command": "bash.exe",
            "args": [
                "-c",
                "g++ -g \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" && \"${fileDirname}/${fileBasenameNoExtension}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compila e executa o arquivo C++ atual"
        }
    ]
}
